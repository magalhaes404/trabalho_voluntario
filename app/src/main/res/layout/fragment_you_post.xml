<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.Profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="10dp">

        <include
            android:id="@+id/inCardHeader"
            layout="@layout/card_header" />

        <include
            android:id="@+id/inLoading"
            layout="@layout/card_loading"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_input_add"
            android:textAlignment="center"
            />

        <LinearLayout
            android:id="@+id/layoutPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ListView
                android:id="@+id/lvPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/launcher_background"
                tools:listitem="@layout/item_post" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_empty"
                android:layout_margin="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_empry"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>